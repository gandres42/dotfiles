{
    "name": "WSNAME",
    "privileged": true,
    "remoteUser": "${env:USER}",
    "build": {
        "dockerfile": "Dockerfile",
        "args": {
            "USERNAME": "${env:USER}",
            "CONTAINER_ID": "WSNAME"
        }
    },
    "workspaceFolder": "/home/${env:USER}/WSNAME",
    "workspaceMount": "source=${localWorkspaceFolder},target=/home/${env:USER}/WSNAME,type=bind",
    "runArgs": [
        "--net=host",
        "--pid=host",
        "--ipc=host",
        "-e", "DISPLAY=${env:DISPLAY}"
    ],
    "customizations": {
        "vscode": {
            "extensions": [
                "detachhead.basedpyright",
                "llvm-vs-code-extensions.vscode-clangd",
                "maptz.regionfolder",
                "mechatroner.rainbow-csv",
                "ms-python.debugpy",
                "ms-python.python",
                "ms-python.vscode-pylance",
                "ms-python.vscode-python-envs",
                "ms-vscode-remote.remote-containers",
                "ms-vscode-remote.remote-ssh",
                "ms-vscode.remote-explorer"
            ]
        }
    },
    "mounts": [
       "source=/tmp/.X11-unix,target=/tmp/.X11-unix,type=bind,consistency=cached",
       "source=/dev/dri,target=/dev/dri,type=bind,consistency=cached",
       "type=bind,source=/home/${localEnv:USER}/.ssh,target=/home/${env:USER}/.ssh,readonly",
       "type=bind,source=/home/${localEnv:USER}/.dotfiles,target=/home/${env:USER}/.dotfiles,readonly",
       "type=bind,source=/home/${localEnv:USER}/Datasets,target=/home/${env:USER}/datasets"
    ]
}