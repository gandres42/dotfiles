{
    "name": "container_ws",
    "privileged": true,
	"remoteUser": "${env:USER}",
    "build": {
        "dockerfile": "Dockerfile",
        "args": {
            "USERNAME": "${env:USER}",
            "CONTAINER_ID": "${containerName}"
        }
    },
    "workspaceFolder": "/home/${env:USER}/ws",
    "workspaceMount": "source=${localWorkspaceFolder},target=/home/${env:USER}/ws,type=bind",
    "runArgs": [
        "--net=host",
        "--pid=host",
        "--ipc=host",
        "-e", "DISPLAY=${env:DISPLAY}"
    ],
    "mounts": [
       "source=/tmp/.X11-unix,target=/tmp/.X11-unix,type=bind,consistency=cached",
       "source=/dev/dri,target=/dev/dri,type=bind,consistency=cached",
       "type=bind,source=/home/${localEnv:USER}/.ssh,target=/home/${env:USER}/.ssh,readonly"
    ]
}